{
  "name": "A browser action with a popup that changes the page color",
  "description": "Change the current page color",
  "version": "1.0",
  "permissions": [
    "activeTab", 
    "tabs", 
    "http://*/*", 
    "https://*/*", 
    "<all_urls>"
  ],
  "background": {
    // "pages": ["index.html"],
    "page": "index.html",
    "persistent": true
  },
  "browser_action": {
      "default_title": "Set this page's color.",
      "default_icon": "icon.png",
      "default_popup": "index.html"
  },
  "manifest_version": 2
}
